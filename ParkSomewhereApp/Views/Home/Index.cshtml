@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/homeIndexStyleSheet.css" rel="stylesheet" />
<h2 id="welcome">Welcome to Park-Somewhere!</h2>
<div class="row">


    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/bench-forest-nature-park-630758.jpeg" alt="Egbert">
                <div class="carousel-caption">
                    <h3>Egbert Picnic Area</h3>

                </div>
            </div>
            <div class="item">
                <img src="~/Content/images/pexels-photo-354611.jpeg" alt="Hemlock">
                <div class="carousel-caption">
                    <h3>Hemlock Creek</h3>

                </div>
            </div>
            <div class="item">
                <img src="~/Content/images/pexels-photo-172510.jpeg" alt="Sehome">
                <div class="carousel-caption">
                    <h3>Sehome Arboretum</h3>

                </div>
            </div>
            <div class="item">
                <img src="~/Content/images/pexels-photo-397096.jpeg" alt="Canal">
                <div class="carousel-caption">
                    <h3>Canal Tow Path Trailhead</h3>

                </div>
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev" data-interval='45'>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next" data-interval='45'>
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</div>
