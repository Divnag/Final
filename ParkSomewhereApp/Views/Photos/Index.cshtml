    @model IEnumerable<ParkSomewhereApp.Models.Photo>

    @{
        ViewBag.Title = "Index";
    }


    <body class="photo-index">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <p id="photoHeader">Photo Gallery</p>
                </div>
            </div>


            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-sm-6">
                        @Html.DropDownList("ParkID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="row" id="buttons">
                    <div class="col-sm-12">
                        <input type="submit" value="Search" class="btn btn-primary" id="photoSubmit" />
                        <button class="btn btn-warning" id="photoAdd">@Html.ActionLink("Add Photo", "Add")</button>
                        <button class="btn btn-danger" id="view">
                            @Html.ActionLink("View All Photos", "Index")
                        </button>
                    </div>
                </div>
            }

