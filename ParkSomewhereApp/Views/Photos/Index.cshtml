            <div class="row index-row" id="ind-row" style="display:block" height="200px">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-3 item-col" id="thumb">
                        <div class="img-thumbnail">
                            <div class="caption">
                                <img id="myImg" src="@Url.Content(item.Image)" height="200" width="220" />
                                <div class="overlay">
                                    <div class="text">
                                        @Html.DisplayFor(modelItem => item.Park.ParkName) <br /> Uploaded By: @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
                                        <p></p>
                                        @Html.ActionLink("View Image", "Details", new { id = item.PhotoID }, new { target = "_blank" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row empty-row"></div>
