<link href="https://fonts.googleapis.com/css?family=Acme|Montserrat" rel="stylesheet">
<link href="~/Content/PhotoIndexStyleSheet.css" rel="stylesheet" />
<body class="addPage">
    @model ParkSomewhereApp.Models.Photo
    @{
        ViewBag.Title = "Add";
    }
    <div class="container">
        @using (Html.BeginForm("Add", "Photos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row empty-row"></div>
            <div class="row">
                <div class="col-sm-12">
                    <h2 id="add-header">Add New Photo</h2>
                </div>
            </div>
           <center> <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6" id="photoForm">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.DropDownList("ParkID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ParkID, "", new { @class = "text-danger" })
                    <div class="row row-space" id="image">
                        <div class="form-group">
                            <p class="add"><input type="file" name="ImageFile" required /></p>
                        </div>
                    </div>
                    <div class="row" id="btnrow">
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Submit" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                    <div class="row" id="space"></div>
                </div>
            </div></center>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>